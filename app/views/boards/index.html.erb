<p id="notice"><%= notice %></p>

<h1>Bulletin Boards</h1>
<%= link_to 'New Board', new_board_path,class: 'btn btn-primary btn-block' %>
<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>Title</th>
      <th>Content</th>
      <th>Created at</th>
      <th colspan="3">Action</th>
    </tr>
  </thead>

  <tbody>
    <% @boards.each do |board| %>
      <tr>
        <td><%= board.id %></td>
        <td><%= board.title %></td>
        <td><%= board.content.truncate(10) %></td>
        <td><%= board.created_at %></td>
        <td><%= link_to 'Show', board,class: 'btn btn-info btn-block' %></td>
        <td><%= link_to 'Edit', edit_board_path(board),class: 'btn btn-warning btn-block' %></td>
        <td><%= link_to 'Destroy', board, method: :delete, class: 'btn btn-danger btn-block', data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @boards %>

<br>


